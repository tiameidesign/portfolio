---
import AccessibleIcon from './icons/AccessibleIcon.astro';
import BatteryIcon from './icons/BatteryIcon.astro';
import BriefcaseIcon from './icons/BriefcaseIcon.astro';---

<section class="features">
	<div class="container">
		<div class="grid">
			<div class="feature">
				<div class="icon briefcase">
					<BriefcaseIcon />
				</div>
				<h3>Working at</h3>
				<p><a href="https://careers.becomearoadie.com/us/en/c/support-center-jobs">Texas Roadhouse Corporate</a></p>
				<p>Previously <a href="https://bridgegood.org/">BRIDGEGOOD</a></p>
			</div>

			<div class="feature">
				<div class="icon person">
					<AccessibleIcon />
				</div>
				<h3>Committed to</h3>
				<p>Designing for inclusive accessible user experiences</p>
			</div>

			<div class="feature">
				<div class="icon battery">
					<BatteryIcon />
				</div>
				<h3>Fueled by</h3>
				<p>Exercise, iced lattes, music, pastries, and audiobooks (in that order)</p>
			</div>
		</div>
	</div>
</section>

<style>
	.features {
		padding: 0 0 4rem;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 3rem;
		max-width: 1000px;
		margin: 0 auto;
		justify-items: center;
	}

	.feature {
		text-align: center;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.icon {
		margin-bottom: 1.5rem;
		display: flex;
		justify-content: center;
		align-items: center;
		color: var(--color-primary--dark);
		height: 40px;
	}

	.icon.person {
		transform: scale(1.15);
	}

	.icon.battery {
		transform: rotate(90deg) scale(1.1);
	}

	h3 {
		color: var(--color-primary--dark);
		font-size: 1.5rem;
		font-weight: 600;
		margin: 0 0 1rem 0;
	}

	p {
		color: #666;
		font-size: 1rem;
		line-height: 1.5;
		margin: 0;
	}

	a {
		color: #666;
		text-decoration: underline;
	}

	a:hover {
		color: #999;
	}

	@media (max-width: 768px) {
		.features {
			padding: 0 0 2rem;
		}
		
		.container {
			padding: 0 1rem;
		}
		
		.grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		
		h3 {
			font-size: 1.25rem;
		}
	}

	@media (max-width: 480px) {
		.grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 1.5rem;
		}
		
		.feature:nth-child(3) {
			grid-column: 1 / -1;
		}
	}
</style>