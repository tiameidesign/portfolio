---
import LogoIcon from './icons/LogoIcon.astro';---

<section class="hero">
	<div class="container">
		<h1 class="tiamei-logo">
			<LogoIcon alt="Tia Mei Logo" />
			<span class="hidden">Tia Mei</span>
		</h1>
		<p class="tagline">her user experience narrative at a glance...</p>
		<!--<p class="intro">Hi Hi! I am Tia Mei and I am a User Experience Designer located in Louisville, Kentucky!</p>-->
	</div>
</section>

<style>
	.hero {
		padding: 4rem 0;
		text-align: center;
	}

	.container {
		max-width: 800px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	h1 {
		font-size: 4rem;
		color: var(--color-primary--dark);
		margin: 0 0 1rem 0;
		font-weight: bold;
		line-height: 1.1;
	}

	.tiamei-logo {
		height: 4rem;
		margin: 0 -8px 16px;
		vertical-align: middle;
		position: relative;
	}

	.hidden {
		color: transparent;
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
	}

	.tagline {
		font-size: 1.25rem;
		color: #666;
		margin: 0 0 2rem 0;
		font-style: italic;
	}

	.intro {
		font-size: 1.125rem;
		color: #333;
		line-height: 1.6;
		margin: 0;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 2rem 0;
		}
		
		.container {
			padding: 0 1rem;
		}
		
		h1 {
			font-size: 2.5rem;
		}
		
		.tagline {
			font-size: 1.1rem;
		}
		
		.intro {
			font-size: 1rem;
		}
	}
</style>