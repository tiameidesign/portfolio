---
export interface Props {
  title: string;
  imageSrc: string;
  imageAlt: string;
  links: Array<{ href: string; text: string; target?: string }>;
  imgAlign?: 'left' | 'right';
}

const { title, imageSrc, imageAlt, links, imgAlign = 'left' } = Astro.props;
---

<div class={`design-card ${imgAlign}`}>
  <div class="image-section">
    <img src={imageSrc} alt={imageAlt} />
  </div>
  <div class="content-section">
    <h2>{title}</h2>
    <div class="description">
      <slot />
    </div>
    <ul class="links-list">
      {links.map(link => (
        <li>
          <a href={link.href} target={link.target || '_self'}>
            {link.text}
          </a>
        </li>
      ))}
    </ul>
  </div>
</div>

<style>
  .design-card {
    display: flex;
    min-height: 60vh;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    box-sizing: border-box;
    gap: 3rem;
  }

  .design-card.right {
    flex-direction: row-reverse;
  }

  .image-section {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image-section img {
    width: 100%;
    max-width: 500px;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .content-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  h2 {
    font-family: "Homenaje", sans-serif;
    font-size: 2.5rem;
    color: var(--color-primary--dark, #3e542c);
    margin: 0;
    line-height: 1.2;
  }

  .description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: #333;
  }

  .description p {
    margin: 0 0 1rem 0;
  }

  .description p:last-child {
    margin-bottom: 0;
  }

  .links-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .links-list li {
    margin: 0;
  }

  .links-list a {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background: var(--color-primary, #719b4f);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s ease;
    width: fit-content;
  }

  .links-list a:hover {
    background: var(--color-primary--dark, #3e542c);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .design-card {
      flex-direction: column;
      min-height: auto;
      padding: 1.5rem;
      gap: 2rem;
    }

    .design-card.right {
      flex-direction: column;
    }

    h2 {
      font-size: 2rem;
      text-align: center;
    }

    .description {
      text-align: center;
    }

    .links-list {
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .design-card {
      padding: 1rem;
      gap: 1.5rem;
    }

    h2 {
      font-size: 1.75rem;
    }

    .description {
      font-size: 1rem;
    }

    .links-list a {
      padding: 0.625rem 1.25rem;
      font-size: 0.9rem;
    }
  }
</style>