---
import TreeIcon from './TreeIcon.astro';

import ScreenIcon from './icons/ScreenIcon.astro';
import SilhouetteIcon from './icons/SilhouetteIcon.astro';
import ResumeDownloadIcon from './icons/ResumeDownloadIcon.astro';
---

<header>
	<div class="container">
		<a class="logo active" href="/">
			<span>Tia Mei</span>
			<TreeIcon level={3} size={32} />
		</a>
		<nav>
			<ul>
				<li>
					<a href="/">
						Designs
						<span class="icon-container">
							<ScreenIcon />
						</span>
					</a>
				</li>
				<li>
					<a href="/about">
						About
						<span class="icon-container">
							<SilhouetteIcon />
						</span>
					</a>
				</li>
				<li>
					<a href="/Tia-Mei-Resume-9-9-2025.pdf" target="_blank">
						Resume
						<span class="icon-container">
							<ResumeDownloadIcon />
						</span>
					</a>
				</li>
			</ul>
		</nav>
	</div>
</header>

<style>
	header {
		//background: linear-gradient(135deg, #a8d5ba, #7fb69e);
		background: var(--color-primary--dark);
		color: var(--color-secondary);
		margin: 0;
		padding: 1rem 0;
		position: fixed;
		width: 100%;
		z-index: 10;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 1rem;
		font-size: 18px;
		font-weight: bold;
		color: var(--color-primary2--dark);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0 2rem;
	}

	nav ul {
		display: flex;
		list-style: none;
		margin: 0;
		padding: 0;
		gap: 1rem;
	}

	nav li {
		display: flex;
		height: 100%;
	}

	header a {
		color: var(--color-primary2--dark);
		text-decoration: none;
		font-weight: 600;
		font-size: 16px;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		height: 100%;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		cursor: pointer;
	}

	header a:hover,
	header a.active {
		background-color: var(--color-secondary);
		color: var(--color-primary--dark);
	}

	.icon-container {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 18px;
		height: 18px;
		opacity: 0.67;
	}

	a:hover .icon-container {
		opacity: 1;
	}

	@media (max-width: 768px) {
		.container {
			padding: 0 1rem;
		}


		.logo img {
			width: 28px;
			height: 28px;
		}

		nav ul {
			gap: 0;
			margin-right: -0.5rem;
		}

		header a {
			gap: 0.5rem;
			padding: 0.33rem 0.66rem;
			font-size: 12px;
		}

		.icon-container {
			width: 14px;
			height: 14px;
		}

		header .logo {
			gap: 0.25rem;
		}

		.logo-circle {
			width: 60px;
			height: 60px;
			font-size: 12px;
		}
	}
</style>